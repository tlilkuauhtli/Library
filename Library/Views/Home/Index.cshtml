        var order = parseInt(binary, 2);*@
        $("#order").val(order);
        $("#order").text(order);
        $("#filter #send").click();
    });


    });
    }
<h2 class="page-header">Search Box</h2>

<div id="searchBox">
    <div class="title" align="left">@*<h3>Search Box</h3>*@</div>
    <div id="filter">
        @using (Ajax.BeginForm("Index", new AjaxOptions() { UpdateTargetId = "result" }))
            {
                <div class="form-group">
                    @Html.TextBox("bookName", null, new { Class = "form-control", placeholder = "Book Name" })
                </div>
                <div class="form-group">
                    @Html.TextBox("author", null, new { Class = "form-control", placeholder = "Author" })
                </div>
                <div class="form-group">
                    @Html.TextBox("category", null, new { Class = "form-control", placeholder = "Category" })
                </div>
                <div class="form-group">
                    @Html.TextBox("order", "1", new { Class = "hide" })
                </div>

                <input type="button" id="search" name="search" value="Search" class="btn btn-lg btn-primary" />
                <input type="submit" id="send" name="send" value="Send" class="hide" />
            }
        

    </div>

</div>
<div id="result"></div>