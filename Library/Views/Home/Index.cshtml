    ViewBag.Title = "Index";
}

@section JS {
    $(document).ready(function(){
        $("#filter #search").click(function(){
            $("#filter #send").click();
        });

    $(document).on('click', "span.order", function(){
        if($(this).hasClass('dropup')){
            $(this).removeClass('dropup');
            @*$(this).children("label").text("0");*@
        }
        else{
            $(this).addClass('dropup');
            @*$(this).children("label").text("1");*@
        }
    var order = 1;
    if($(this).attr('id') == "BN")
        order = 1;
    if($(this).attr('id') == "AN")
        order = 2;
    if($(this).attr('id') == "CA")
        order = 3;

